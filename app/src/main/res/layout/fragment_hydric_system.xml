<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/label_reservoir_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        tools:text="Cantareira"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fixed_label_accumulated_volume"
        />

    <TextView
        android:id="@+id/label_reservoir_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Display3"
        tools:text="11%"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/fixed_label_pluviometry_stats"
        />


    <TextView
        android:id="@+id/label_dailly_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        tools:text="No dia : 0.2mm"
        />

    <TextView
        android:id="@+id/label_monthly_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        tools:text="No mês : 200mm"
        />

    <TextView
        android:id="@+id/label_monthly_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        tools:text="Média histórica (mês) : 250mm"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
